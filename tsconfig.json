{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles emission, so TS doesn't need to
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src"]
}
